<h1>New Customer Registration</h1>

<%= form_for @customer do |cust| %>
<table border="0" width="500"> 
	<tr>
		<td><%= cust.label(:first_name, "Customer Name")%><td>
		<td><%= cust.text_field :first_name %><td>
	</tr>

	<tr>
		<td><%= cust.label(:last_name, "Customer Surname")%><td>
		<td><%= cust.text_field :last_name %><td>
	</tr>
	<tr>
		<td><%= cust.label(:email, "Email Address")%><td>
		<td><%= cust.text_field :email %><td>
	</tr>
	<tr>
		<td><%= cust.label(:password, "Password")%><td>
		<td><%= cust.password_field :Password %><td>
	</tr>
	<tr>
		<td><%= cust.label(:physical_address, "Physical Address")%><td>
		<td><%= cust.text_area :physical_address, size: "22x5" %><td>
	</tr>
	<tr>
		<td><%= cust.label(:postal_code, "Postal Code")%><td>
		<td><%= cust.text_field :postal_code %><td>
	</tr>
	<tr>
		<td><%= cust.label(:province, "Province")%><td>
		<td><%= cust.text_field :province  %><td>
	</tr>
	<tr>
		<td><%= cust.label(:city, "City")%><td>
		<td><%= cust.text_field :city %><td>
	</tr>
	
	<tr>
		<td>&nbsp;<td>
		<td>&nbsp;<td>
	</tr>

	<tr>
		<td><%= submit_tag 'Sign Up' %><td>
		<td><td>
	</tr>


</table>
<% end %>
