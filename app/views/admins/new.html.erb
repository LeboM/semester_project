<h1>New Administration Registration</h1>

<%=flash[:notice] %>


<%= form_for @admin do |admin| %>
<table border="0" width="500"> 
	<tr>
		<td><%= admin.label(:first_name, "Admin Name")%><td>
		<td><%= admin.text_field :first_name %><td>
	</tr>

	<tr>
		<td><%= admin.label(:last_name, "Admin Surname")%><td>
		<td><%= admin.text_field :last_name %><td>
	</tr>
	<tr>
		<td><%= admin.label(:contact_number, "Contact Numbers")%><td>
		<td><%= admin.text_field :contact_number %><td>
	</tr>
	<tr>
		<td><%= admin.label(:email, "Email Address")%><td>
		<td><%= admin.text_field :email %><td>
	</tr>
	<tr>
		<td><%= admin.label(:password, "Password")%><td>
		<td><%= admin.password_field :password %><td>
	</tr>
	<tr>
		<td>&nbsp;<td>
		<td>&nbsp;<td>
	</tr>

	<tr>
		<td><%= submit_tag 'Register' %><td>
		<td><td>
	</tr>


</table>
<% end %>



